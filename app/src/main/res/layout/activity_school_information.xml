<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/table_school_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.school_information.SchoolInformationActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <TableLayout
        android:id="@+id/calendar_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="1.0">

        <TableRow>

            <TextView
                android:id="@+id/school_info_schoolname"
                android:layout_column="1"
                android:padding="3dip"
                android:text="School" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Fellow Teacher Contacts" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/teacher_1"
                android:layout_column="1"
                android:padding="3dip"
                android:text="Empty" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/teacher_1_email"
                android:layout_column="1"
                android:padding="3dip"
                android:text="0000000000" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="email" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/teacher_2"
                android:layout_column="1"
                android:padding="3dip"
                android:text="Empty" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/teacher_2_email"
                android:layout_column="1"
                android:padding="3dip"
                android:text="0000000000" />

            <TextView
                android:gravity="right"
                android:padding="3dip"
                android:text="email" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Sponsor" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/sponsor_name"
                android:layout_column="1"
                android:padding="3dip"
                android:text="Empty" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="411dp"
        android:layout_height="362dp"
        app:srcCompat="@drawable/school_building"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-21dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Information"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="290dp" />

</androidx.constraintlayout.widget.ConstraintLayout>